{
  "type": "object",
  "properties": {
    "Languages": {
      "type": "array",
      "items": {
        "type": "string",
        "title":"Language"
      },
      "default":["English"]
    },
    "Text": {
      "type": "object",
      "properties": {
        "Style": {
          "type": "object",
          "properties": {
            "font": {
              "type":"object",
              "properties": {
                "name": {
                  "type": "string",
                  "default":"bitmapfont"
                },
                "size": {
                  "type": "integer",
                  "default":55
                }
              },
              "required":["name","size"]
            },
            "align": {
              "type": "string",
              "default":"center"
            }
          },
          "required":["font","align"]
        },
        "ButtonStyle": {
          "type": "object",
          "properties": {
            "font": {
              "type":"object",
              "properties": {
                "name": {
                  "type": "string",
                  "default":"bitmapfont"
                },
                "size": {
                  "type": "integer",
                  "default":55
                }
              },
              "required":["name","size"]
            },
            "align": {
              "type": "string",
              "default":"center"
            }
          },
          "required":["font","align"]
        },
        "Position": {
          "type": "string",
          "enum": [
            "top",
            "bottom"
          ],
          "default":"bottom"
        },
        "Size": {
          "type": "string",
          "enum": [
            "half",
            "fourth"
          ],
          "default":"fourth"
        }
      },
      "required":["Style","ButtonStyle","Position","Size"]
    },
    "TitleScreen": {
      "type": "object",
      "properties": {
        "Background": {
          "anyOf":[
            {
              "type": "string",
              "title":"From Source",
              "watch": {
                "sources": "Sources.Images"
              },
              "enumSource": [{
                "source": "sources",
                "value": "{{item}}"
              }]
            },
            {
              "type":"string",
              "title":"Custom"
            }
          ]
        },
        "Music": {
          "type": "string"
        }
      },
      "required":["Background"]
    },
    "Help": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "FirstScene": {
      "type": "string",
      "watch": {
        "scenes": "Scenes"
      },
      "enumSource": [{
        "source": "scenes",
        "value": "{{item.Name}}"
      }],
      "description":"The scene where the game begins"
    },
    "HoldTime": {
      "type": "number"
    },
    "Inventory": {
      "type": "object",
      "properties": {
        "Position": {
          "type": "string",
          "enum": [
            "top-left",
            "top-right",
            "bottom-right",
            "bottom-left"
          ]
        },
        "Background": {
          "type": "string"
        },
        "Icon": {
          "type": "string"
        }
      },
      "required":["Position","Background","Icon"]
    },
    "Logos": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "Languages",
    "Text",
    "TitleScreen",
    "Help",
    "FirstScene",
    "HoldTime",
    "Inventory"
  ]
}
