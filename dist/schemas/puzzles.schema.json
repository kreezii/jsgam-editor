{
  "type": "object",
  "properties": {
    "Name": {
      "type": "string"
    },
    "Objects": {
      "$ref":"watch-objects.schema.json"
    },
    "Modify":{
      "type":"array",
      "format": "tabs-top",
      "items":{
        "title":"Target",
        "anyOf":[
          {
            "$ref":"property-objects.schema.json",
            "title":"Object"
          },
          {
            "type":"object",
            "title":"Player"
          }
        ]
      }
    },
    "Say": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "Resolve": {
      "type": "string"
    },
    "AddObject": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "Scene": {
          "type": "string"
        }
      },
      "required": []
    },
    "RemoveObject": {
      "type": "string"
    },
    "SetDialogue": {
      "type": "object",
      "properties": {
        "Character": {
          "type": "string"
        },
        "Dialogue": {
          "type": "string"
        }
      },
      "required": []
    }
  },
  "required": [
    "Name",
    "Objects",
    "Modify"
  ]
}
