{
    "type": "object",
    "format":"categories",
    "properties": {
      "Name": {
        "type": "string"
      },
      "Description": {
        "type": "array",
        "items": {
          "type": "string",
          "title":"Language"
        },
        "description": "If not defined, the NoDescription property of the Texts schema will be used."
      },
      "Position": {
        "type": "array",
        "format":"table",
        "items": {
          "type": "number",
          "format":"number",
          "title":"Coordinates"
        },
        "options":{
          "disable_array_reorder":true
        },
        "maxItems": 2,
        "minItems": 2,
        "description": "Position in the scene."
      },
      "Size": {
        "type": "number",
        "default": "1",
        "description": "Size of the object"
      },
      "Mirror": {
        "type": "boolean",
        "description": "Flip horizontally",
        "default": false
      },
      "Lock": {
        "type": "boolean",
        "description": "Player can use but cannot drag the object",
        "default": false
      },
      "Interactive": {
        "type": "boolean",
        "description": "Set to true if the object is just for decoration",
        "default": true
      },
      "Take": {
        "type": "boolean",
        "format": "checkbox",
        "default": true,
        "readOnly": true
      },
      "Use": {
        "type": "string",
        "watch": {
          "puzzles": "Puzzles"
        },
        "enumSource": [{
          "source": "puzzles",
          "value": "{{item.Name}}"
        }],
        "description": "Name of the puzzle "
      },
      "Door": {
        "type": "object",
        "properties": {
          "To": {
            "type": "string",
            "description": "Name of the scene to go"
          },
          "Player": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Position of the player in the new scene"
          }
        },
        "required": [
          "To",
          "Player"
        ],
        "description": "Using the object changes to another scene."
      },
      "Combine": {
        "type": "object",
        "properties": {
          "With": {
            "type": "string",
            "description": "Name of the object in the inventory"
          },
          "Puzzle": {
            "type": "string",
            "description": "Name of the puzzle to resolve"
          }
        },
        "description": "Check it when an object from the inventory is dragged over this object."
      }
    },
    "required": [
      "Name",
      "Position"
    ]
}
