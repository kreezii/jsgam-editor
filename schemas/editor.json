{
  "title": "Adventure",
  "type": "object",
  "properties": {
    "Settings": {
      "$ref": "settings.schema.json"
    },
    "Texts": {
      "$ref": "texts.schema.json"
    },
    "Player": {
      "$ref": "player.schema.json"
    },
    "Objects": {
      "title": "Objects",
      "type": "array",
      "format": "tabs-top",
      "items": {
        "title": "Object",
        "headerTemplate": "{{self.Name}}",
        "anyOf": [
          {
            "$ref": "objects-static.schema.json",
            "title": "Static"
          },
          {
            "$ref": "objects-invisible.schema.json",
            "title": "Invisible"
          },
          {
            "$ref": "objects-animated.schema.json",
            "title": "Animated"
          }
        ]
      },
      "options": {
        "disable_collapse": true
      }
    },
    "Characters": {
      "title": "Characters",
      "type": "array",
      "format": "tabs",
      "items": {
        "title": "Character",
        "$ref": "characters.schema.json",
        "headerTemplate": "{{self.Name}}"
      },
      "options": {
        "disable_collapse": true
      }
    },
    "Dialogues": {
      "title": "Dialogues",
      "type": "array",
      "format": "tabs",
      "items": {
        "title": "Dialogue",
        "headerTemplate": "{{self.Name}}",
        "$ref": "dialogues.schema.json"
      },
      "options": {
        "disable_collapse": true
      }
    },
    "Scenes": {
      "title": "Scenes",
      "type": "array",
      "format": "tabs",
      "items": {
        "title": "Scene",
        "$ref": "scenes.schema.json",
        "headerTemplate": "{{self.Name}}"
      },
      "options": {
        "disable_collapse": true
      }
    },
    "Cutscenes": {
      "title": "Cutscenes",
      "type": "array",
      "format": "tabs",
      "items": {
        "title": "Cutscene",
        "headerTemplate": "{{self.Name}}",
        "oneOf": [
          {
            "$ref": "cutscenes-vid.schema.json",
            "title": "Video"
          },
          {
            "$ref": "cutscenes.schema.json",
            "title": "Images Sequence"
          }
        ]
      },
      "options": {
        "disable_collapse": true
      }
    },
    "Credits": {
      "$ref": "credits.schema.json"
    },
    "Help": {
      "$ref": "help.schema.json"
    },
    "Puzzles": {
      "title": "Puzzles",
      "type": "array",
      "format": "tabs",
      "items": {
        "title": "Puzzle",
        "headerTemplate": "{{self.Name}}",
        "$ref": "puzzles.schema.json"
      },
      "options": {
        "disable_collapse": true
      }
    },
    "Music": {
      "title": "Music",
      "type": "array",
      "format": "tabs",
      "items": {
        "title": "Music",
        "$ref": "music.schema.json",
        "headerTemplate": "{{self.Name}}"
      },
      "options": {
        "disable_collapse": true
      }
    },
    "Sources": {
      "$ref": "sources.schema.json"
    }
  },
  "required": [
    "Settings",
    "Texts",
    "Player",
    "Objects",
    "Scenes",
    "Puzzles",
    "Sources"
  ],
  "dependencies": {
    "Dialogues": [
      "Characters"
    ]
  },
  "options": {
    "disable_collapse": true,
    "compact": true
  },
  "format": "categories"
}
