{
  "type": "object",
  "properties": {
    "Name": {
      "type": "string"
    },
    "Modify": {
      "anyOf": [
        {
          "properties": {
            "Object": {
              "$ref": "objects.schema.json",
              "title": "Properties",
              "properties": {
                "Name": {
                  "type": "string",
                  "watch": {
                    "objects": "Objects"
                  },
                  "enumSource": [
                    {
                      "source": "objects",
                      "value": "{{item.Name}}"
                    }
                  ]
                }
              }
            }
          },
          "options": {
            "disable_properties": true
          },
          "required": [
            "Name"
          ],
          "title": "Object"
        },
        {
          "type": "object",
          "properties": {
            "Player": {
              "$ref": "property-player.schema.json",
              "title": "Properties"
            }
          },
          "options": {
            "disable_properties": true
          },
          "required": [
            "Player"
          ],
          "title": "Player"
        },
        {
          "type": "object",
          "properties": {
            "NPC": {
              "$ref": "property-character.schema.json",
              "title": "Properties"
            }
          },
          "options": {
            "disable_properties": true
          },
          "required": [
            "NPC"
          ],
          "title": "Character"
        }
      ]
    },
    "Remove": {
      "type": "object",
      "format": "grid",
      "properties": {
        "Object": {
          "$ref": "watch-objects.schema.json",
          "title": "Object"
        },
        "Character": {
          "$ref": "watch-characters.schema.json",
          "title": "Character"
        }
      }
    },
    "Add": {
      "type": "object",
      "format": "grid",
      "properties": {
        "Object": {
          "type": "object",
          "properties": {
            "Name": {
              "$ref": "watch-objects.schema.json"
            },
            "Scene": {
              "$ref": "watch-scenes.schema.json"
            }
          },
          "required": ["Scene","Name"],
          "title": "Object"
        },
        "Inventory": {
          "$ref": "watch-objects.schema.json",
          "title": "Inventory"
        },
        "NPC": {
          "type": "object",
          "properties": {
            "Name": {
              "$ref": "watch-characters.schema.json"
            },
            "Scene": {
              "$ref": "watch-scenes.schema.json"
            }
          },
          "required": ["Scene","Name"],
          "title": "Character"
        }
      }
    },
    "Say": {
      "$ref": "languages.schema.json"
    },
    "Resolve": {
      "$ref": "watch-puzzle.schema.json",
      "description": "Name of the puzzle to resolve"
    }
  },
  "required": [
    "Name"
  ]
}
