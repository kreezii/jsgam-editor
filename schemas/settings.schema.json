{
  "title": "Settings",
  "description": "Adventure settings",
  "format": "categories",
  "basicCategoryTitle": "Main",
  "type": "object",
  "properties": {
    "Languages": {
      "type": "array",
      "description":"Languages used in the adventure",
      "items": {
        "type": "string",
        "title": "Language"
      },
      "default": [
        "English"
      ]
    },
    "Text": {
      "type": "object",
      "format":"categories",
      "properties": {
        "Style": {
          "$ref": "watch-fonts.schema.json"
        },
        "Button": {
          "$ref": "watch-fonts.schema.json"
        },
        "Title": {
          "$ref": "watch-fonts.schema.json"
        },
        "Credits": {
          "$ref": "watch-fonts.schema.json"
        },
        "Help": {
          "$ref": "watch-fonts.schema.json"
        },
        "Position": {
          "type": "string",
          "enum": [
            "top",
            "bottom"
          ],
          "default": "bottom"
        },
        "Size": {
          "type": "string",
          "enum": [
            "half",
            "fourth"
          ],
          "default": "fourth"
        }
      },
      "required": [
        "Style",
        "Button",
        "Position",
        "Size"
      ]
    },
    "TitleScreen": {
      "type": "object",
      "description": "Select the title screen",
      "properties": {
        "Background": {
          "$ref": "sources-img.schema.json"
        },
        "Music": {
          "$ref": "watch-music.schema.json"
        }
      },
      "required": [
        "Background"
      ]
    },
    "FirstScene": {
      "description": "The scene where the game begins",
      "$ref": "watch-scenes.schema.json"
    },
    "HoldTime": {
      "type": "number",
      "title": "Holding Time",
      "format": "number",
      "description": "Seconds for touch screens to",
      "step": 0.1,
      "default": 0.1
    },
    "Inventory": {
      "type": "object",
      "properties": {
        "Position": {
          "type": "string",
          "enum": [
            "top-left",
            "top-right",
            "bottom-right",
            "bottom-left"
          ]
        },
        "Background": {
          "$ref": "sources-img.schema.json"
        },
        "Icon": {
          "$ref": "sources-img.schema.json"
        },
        "Border": {
          "type": "array",
          "format": "table",
          "items": {
            "type": "number",
            "format": "number",
            "title": "Coordinates"
          },
          "options": {
            "disable_array_reorder": true
          },
          "maxItems": 2,
          "minItems": 2,
          "description": "Position of the character"
        }
      },
      "required": [
        "Position",
        "Background",
        "Icon"
      ]
    },
    "Options": {
      "type": "object",
      "properties": {
        "Sound": {
          "type": "object",
          "properties": {
            "Icon":{
              "$ref": "sources-img.schema.json"
            },
            "Position":{
              "type": "string",
              "enum": [
                "top-left",
                "top-right",
                "bottom-right",
                "bottom-left"
              ]
            }
          },
          "required": [
            "Position",
            "Icon"
          ]
        },
        "Fullscreen":{
          "type": "object",
          "properties": {
            "Icon":{
              "$ref": "sources-img.schema.json"
            },
            "Position":{
              "type": "string",
              "enum": [
                "top-left",
                "top-right",
                "bottom-right",
                "bottom-left"
              ]
            }
          },
          "required": [
            "Position",
            "Icon"
          ]
        }
      }
    },
    "Logos": {
      "type": "array",
      "items": {
        "title": "Logo",
        "anyOf": [
          {
            "type": "string",
            "title": "From Source",
            "watch": {
              "sources": "Sources.Images"
            },
            "enumSource": [
              {
                "source": "sources",
                "value": "{{item}}"
              }
            ]
          },
          {
            "type": "string",
            "title": "Custom"
          }
        ]
      }
    }
  },
  "required": [
    "Languages",
    "Text",
    "TitleScreen",
    "FirstScene",
    "HoldTime",
    "Inventory"
  ],
  "options": {
    "disable_collapse": true
  }
}
