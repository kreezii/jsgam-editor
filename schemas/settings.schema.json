{
  "type": "object",
  "properties": {
    "Languages": {
      "type": "array",
      "items": {
        "type": "string",
        "title":"Language"
      },
      "default":["English"]
    },
    "Text": {
      "type": "object",
      "properties": {
        "Style": {
          "type": "object",
          "properties": {
            "font": {
              "type":"object",
              "properties": {
                "name": {
                  "type": "string",
                  "default":"bitmapfont"
                },
                "size": {
                  "type": "integer",
                  "default":55
                }
              },
              "required":["name","size"]
            },
            "align": {
              "type": "string",
              "default":"center"
            }
          },
          "required":["font","align"]
        },
        "Button": {
          "type": "object",
          "properties": {
            "font": {
              "type":"object",
              "properties": {
                "name": {
                  "type": "string",
                  "default":"bitmapfont"
                },
                "size": {
                  "type": "integer",
                  "default":55
                }
              },
              "required":["name","size"]
            },
            "align": {
              "type": "string",
              "default":"center"
            }
          },
          "required":["font","align"]
        },
        "Credits": {
          "type": "object",
          "properties": {
            "font": {
              "type":"object",
              "properties": {
                "name": {
                  "type": "string",
                  "default":"bitmapfont"
                },
                "size": {
                  "type": "integer",
                  "default":55
                }
              },
              "required":["name","size"]
            },
            "align": {
              "type": "string",
              "default":"center"
            }
          },
          "required":["font","align"]
        },
        "Position": {
          "type": "string",
          "enum": [
            "top",
            "bottom"
          ],
          "default":"bottom"
        },
        "Size": {
          "type": "string",
          "enum": [
            "half",
            "fourth"
          ],
          "default":"fourth"
        }
      },
      "required":["Style","Button","Position","Size"]
    },
    "TitleScreen": {
      "type": "object",
      "properties": {
        "Background": {
          "$ref": "sources-img.schema.json"
        },
        "Music": {
          "type": "string"
        }
      },
      "required":["Background"]
    },
    "FirstScene": {
      "$ref":"watch-scenes.schema.json",
      "description":"The scene where the game begins"
    },
    "Resolution":{
      "type": "array",
      "format":"table",
      "items": {
        "type": "number",
        "format":"number",
        "title":"Coordinates"
      },
      "options":{
        "disable_array_reorder":true
      },
      "default":[960,540],
      "maxItems": 2,
      "minItems": 2,
      "description": "Game resolution"
    },
    "HoldTime": {
      "type": "number",
      "default":0.1
    },
    "Inventory": {
      "type": "object",
      "properties": {
        "Position": {
          "type": "string",
          "enum": [
            "top-left",
            "top-right",
            "bottom-right",
            "bottom-left"
          ]
        },
        "Background": {
          "$ref": "sources-img.schema.json"
        },
        "Icon": {
          "$ref": "sources-img.schema.json"
        }
      },
      "required":["Position","Background","Icon"]
    },
    "Logos": {
      "type": "array",
      "items": {
        "title":"Logo",
        "anyOf":[
          {
            "type": "string",
            "title":"From Source",
            "watch": {
              "sources": "Sources.Images"
            },
            "enumSource": [{
              "source": "sources",
              "value": "{{item}}"
            }]
          },
          {
            "type":"string",
            "title":"Custom"
          }
        ]
      }
    }
  },
  "required": [
    "Languages",
    "Text",
    "TitleScreen",
    "FirstScene",
    "HoldTime",
    "Resolution",
    "Inventory"
  ]
}
