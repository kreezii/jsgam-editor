{
  "type": "object",
  "format": "categories",
  "properties": {
    "Name": {
      "type": "string"
    },
    "Area": {
      "type": "array",
      "format": "tabs",
      "description": "Polygon"
    },
    "Description": {
      "type": "array",
      "items": {
        "type": "string",
        "title": "Language"
      },
      "description": "If not defined, the NoDescription property of the Texts schema will be used."
    },
    "Interactive": {
      "type": "boolean",
      "description": "Set to true if the object is just for decoration",
      "default": true
    },
    "Use": {
      "type": "string",
      "description": "Name of the puzzle "
    },
    "Door": {
      "type": "object",
      "properties": {
        "To": {
          "$ref": "watch-scenes.schema.json",
          "description": "Name of the scene to go"
        },
        "Player": {
          "type": "array",
          "format": "table",
          "items": {
            "type": "number",
            "format": "number",
            "title": "Coordinates"
          },
          "options": {
            "disable_array_reorder": true
          },
          "maxItems": 2,
          "minItems": 2,
          "description": "Player's position in the first scene."
        }
      },
      "required": [
        "To",
        "Player"
      ],
      "description": "Using the object changes to another scene."
    }
  },
  "required": [
    "Name",
    "Area",
    "Description"
  ]
}
