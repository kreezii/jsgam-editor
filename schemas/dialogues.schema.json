{
  "type": "object",
  "id": "idDialogues",
  "properties": {
    "Name": {
      "type": "string",
      "description": "Dialogue name"
    },
    "DefaultBranch": {
      "type": "string",
      "watch": {
        "ramas": "idDialogues.Branches"
      },
      "enumSource": [
        {
          "source": "ramas",
          "value": "{{item.Name}}"
        }
      ],
      "description": "Name of the first branch to show."
    },
    "Branches": {
      "type": "array",
      "format": "tabs",
      "items": {
        "title": "Branch",
        "headerTemplate": "{{i}} - {{self.Name}}",
        "type": "object",
        "properties": {
          "Name": {
            "type": "string",
            "description": "Name of the branch"
          },
          "Size": {
            "type": "integer",
            "enum": [
              10,
              15,
              20,
              25,
              30,
              35,
              40,
              45,
              50,
              55,
              60,
              65,
              70,
              75,
              80,
              85
            ],
            "default": 30
          },
          "Choices": {
            "type": "array",
            "format": "tabs-top",
            "items": {
              "title": "Choice",
              "headerTemplate": "{{i}}",
              "type": "object",
              "properties": {
                "Text": {
                  "type": "array",
                  "format": "tabs-top",
                  "items": {
                    "title": "Language Text",
                    "type": "string",
                    "format": "textarea",
                    "options": {
                      "input_height": "100px"
                    }
                  },
                  "description": "Text for the player"
                },
                "Answer": {
                  "type": "array",
                  "format": "tabs-top",
                  "items": {
                    "title": "Language Answer",
                    "type": "string",
                    "format": "textarea",
                    "options": {
                      "input_height": "100px"
                    }
                  },
                  "description": "Text for the non-playable character."
                },
                "Repeat": {
                  "type": "boolean",
                  "default": false,
                  "readOnly": true,
                  "description": "If set to false the player only can use it one time."
                },
                "Link": {
                  "type": "string",
                  "watch": {
                    "ramas": "idDialogues.Branches"
                  },
                  "enumSource": [
                    {
                      "source": "ramas",
                      "value": "{{item.Name}}"
                    }
                  ],
                  "description": "Link to the name to another branch"
                },
                "Puzzle": {
                  "$ref": "watch-puzzle.schema.json",
                  "description": "Puzzle to resolve when the choice is selected."
                },
                "EndDialogue": {
                  "type": "boolean",
                  "format": "checkbox",
                  "default": true,
                  "readOnly": true,
                  "description": "If set to true, finish the dialogue."
                },
                "Size": {
                  "type": "integer",
                  "enum": [
                    10,
                    15,
                    20,
                    25,
                    30,
                    35,
                    40,
                    45,
                    50,
                    55,
                    60,
                    65,
                    70,
                    75,
                    80,
                    85
                  ],
                  "default": 30
                }
              },
              "required": [
                "Text",
                "Answer"
              ]
            },
            "description": "Array of choices to be shown."
          }
        },
        "required": [
          "Name",
          "Choices"
        ]
      },
      "description": "A branch is a group of choices."
    }
  },
  "required": [
    "Name",
    "DefaultBranch",
    "Branches"
  ],
  "description": "Game dialogues array"
}
