{
  "type": "object",
  "properties": {
    "Filename":{
      "type": "string",
      "default":"game",
      "description":"Default filename to save or export the adventure"
    },
    "Folders": {
      "type": "object",
      "format": "grid-strict",
      "id": "structure",
      "properties": {
        "Main": {
          "type": "string",
          "default": "data/"
        },
        "Player": {
          "anyOf": [
            {
              "type": "string",
              "title": "Auto",
              "template": "{{mainFolder}}characters/",
              "watch": {
                "mainFolder": "structure.Main"
              }
            },
            {
              "type": "string",
              "title": "Edit",
              "default": "data/player/"
            }
          ]
        },
        "NPC": {
          "anyOf": [
            {
              "type": "string",
              "title": "Auto",
              "template": "{{mainFolder}}characters/",
              "watch": {
                "mainFolder": "structure.Main"
              }
            },
            {
              "type": "string",
              "title": "Edit",
              "default": "data/npc/"
            }
          ]
        },
        "Audio": {
          "anyOf": [
            {
              "type": "string",
              "title": "Auto",
              "template": "{{mainFolder}}audio/",
              "watch": {
                "mainFolder": "structure.Main"
              }
            },
            {
              "type": "string",
              "title": "Edit",
              "default": "data/sounds/"
            }
          ]
        }
      },
      "description": "Game structure folders",
      "required": [
        "Main",
        "Audio"
      ]
    },
    "Images": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "options": {
        "disable_properties": true,
        "disable_array_add": true
      }
    },
    "Fonts": {
      "type": "array",
      "items": {
        "type": "string",
        "headerTemplate": "Font: {{i}}"
      },
      "options": {
        "disable_properties": true,
        "disable_array_add": true
      }
    },
    "Audio":{
      "type": "array",
      "items": {
        "type": "string",
        "headerTemplate": "Audio: {{i}}"
      },
      "options": {
        "disable_properties": true,
        "disable_array_add": true
      }
    }
  },
  "required": [
    "Filename",
    "Images",
    "Folders",
    "Fonts",
    "Audio"
  ],
  "options": {
    "disable_collapse": true
  }
}
