{
  "properties": {
    "Folders":{
      "type":"object",
      "format":"grid-strict",
      "id": "structure",
      "properties":{
        "Main":{
          "type":"string",
          "default":"data/"
        },
        "Player":{
          "anyOf": [
            {
              "type":"string",
              "title":"Auto",
              "template": "{{mainFolder}}characters/",
              "watch": {
                "mainFolder": "structure.Main"
              }
            },
            {
              "type":"string",
              "title": "Edit",
              "default":"data/player/"
            }
          ]
        },
        "NPC":{
          "anyOf": [
            {
              "type":"string",
              "title":"Auto",
              "template": "{{mainFolder}}characters/",
              "watch": {
                "mainFolder": "structure.Main"
              }
            },
            {
              "type":"string",
              "title": "Edit",
              "default":"data/npc/"
            }
          ]
        },
        "Sounds":{
          "anyOf": [
            {
              "type":"string",
              "title":"Auto",
              "template": "{{mainFolder}}sounds/",
              "watch": {
                "mainFolder": "structure.Main"
              }
            },
            {
              "type":"string",
              "title": "Edit",
              "default":"data/sounds/"
            }
          ]
        }
      },
      "description":"Game structure folders",
      "required":[
        "Main"
      ]
    },
    "Images": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "options":{
        "disable_properties":true,
        "disable_array_add":true
      }
    },
    "Fonts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "size":{
            "type": "number"
          }
        }
      },
      "options":{
        "disable_properties":true,
        "disable_array_add":true
      }
    }
  },
  "required":[
    "Images",
    "Folders",
    "Fonts"
  ]
}
