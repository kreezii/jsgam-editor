{
  "title": "Player",
  "type": "object",
  "format": "grid-strict",
  "properties": {
    "Avatar": {
      "$ref": "sources-img.schema.json"
    },
    "Texture": {
      "type": "string"
    },
    "Json": {
      "type": "string"
    },
    "Skeleton": {
      "type": "string"
    },
    "Armature": {
      "type": "string"
    },
    "Animations": {
      "type": "object",
      "properties": {
        "Stand": {
          "type": "string"
        },
        "Walk": {
          "type": "string"
        },
        "Take": {
          "type": "string"
        },
        "Use": {
          "type": "string"
        },
        "Say": {
          "type": "string"
        }
      }
    },
    "Position": {
      "type": "array",
      "format": "table",
      "items": {
        "type": "number",
        "format": "number",
        "title": "Coordinates"
      },
      "options": {
        "disable_array_reorder": true
      },
      "maxItems": 2,
      "minItems": 2,
      "default":[250,250],
      "description": "Player's position in the first scene."
    },
    "Color": {
      "type": "string",
      "description": "Tint text when player speaks"
    },
    "VoiceSet": {
      "type": "string"
    }
  },
  "required": [
    "Position",
    "Armature",
    "Skeleton",
    "Json",
    "Texture",
    "Avatar"
  ],
  "options": {
    "disable_collapse": true
  }
}
