{
    "type": "object",
    "properties": {
      "Name": {
        "type": "string",
        "default":"New Scene"
      },
      "Background": {
        "$ref": "sources-img.schema.json"
      },
      "Foreground": {
        "$ref": "sources-img.schema.json"
      },
      "Music": {
        "$ref":"watch-music.schema.json"
      },
      "WalkArea": {
        "type": "array",
        "format": "tabs-top",
        "items": {
          "type": "number",
          "headerTemplate": "{{i}}"
        }
      },
      "Obstacles": {
        "type": "object",
        "format":"tabs",
        "additionalProperties": { "type": "array", "format": "tabs-top" }
      },
      "Player": {
        "type": "object",
        "properties": {
          "Size": {
            "type": "number"
          }
        },
        "description": "Player options in this scene"
      },
      "Objects": {
        "$ref":"watch-objects.schema.json"
      },
      "CutScene": {
        "type": "string"
      },
      "Depth": {
        "type": "number"
      },
      "Characters": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [
      "Name",
      "Background",
      "WalkArea"
    ]
}
