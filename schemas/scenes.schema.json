{
  "type": "object",
  "properties": {
    "Name": {
      "type": "string",
      "default": "New Scene"
    },
    "Background": {
      "$ref": "sources-img.schema.json"
    },
    "Foreground": {
      "$ref": "sources-img.schema.json"
    },
    "Music": {
      "$ref": "watch-music.schema.json"
    },
    "WalkArea": {
      "type": "array",
      "format": "tabs-top",
      "items": {
        "type": "number",
        "headerTemplate": "{{i}}"
      }
    },
    "Obstacles": {
      "type": "array",
      "format": "tabs-top",
      "items": {
        "type": "array",
        "title": "Obstacle",
        "headerTemplate": "Obstacle {{i}}",
        "format": "tabs-top",
        "items": {
          "type": "number",
          "headerTemplate": "Coord {{i}}"
        }
      }
    },
    "Player": {
      "type": "object",
      "properties": {
        "Size": {
          "type": "number",
          "format": "number",
          "step": 0.01,
          "default": 1.0,
          "description": "Size of the player sprite"
        }
      },
      "description": "Player options in this scene",
      "required": ["Size"]
    },
    "Objects": {
      "type": "array",
      "format": "table",
      "items": {
        "$ref": "watch-objects.schema.json",
        "headerTemplate": "{{self}}",
        "title":"Object"
      },
      "description": "Scene Objects"
    },
    "CutScene": {
      "$ref": "watch-cutscenes.schema.json"
    },
    "Particles": {
      "type": "string",
      "enum": [
        "Dust"
      ],
      "default": "Dust"
    },
    "Filter": {
      "type": "string",
      "enum": [
        "Sun",
        "Night",
        "Heat"
      ],
      "default": "Dust"
    },
    "Depth": {
      "type": "array",
      "format": "tabs-top",
      "items": {
        "type": "object",
        "format": "categories",
        "headerTemplate": "Depth {{i}}",
        "properties": {
          "Area": {
            "type": "array",
            "title": "Area",

            "format": "tabs-top",
            "items": {
              "type": "number",
              "headerTemplate": "Coord {{i}}"
            }
          },
          "Size": {
            "type": "number",
            "default": "1.0",
            "format": "number",
            "step": 0.01,
            "description": "Size of the character"
          }
        }
      },
      "required": [
        "Area",
        "Size"
      ]
    },
    "Characters": {
      "type": "array",
      "format": "table",
      "items": {
        "$ref": "watch-characters.schema.json",
        "headerTemplate": "{{self}}",
        "title":"Character"
      },
      "description": "Scene Non-Playable Characters"

    },
    "Partner": {
      "$ref": "partner.schema.json"
    }
  },
  "required": [
    "Name",
    "Background",
    "WalkArea"
  ]
}
