{
      "type": "object",
      "format":"categories",
      "properties": {
        "Name": {
          "type": "string"
        },
        "VoiceSet": {
          "type": "string"
        },
        "Sequence": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "Sequence",
            "properties": {
              "Image": {
                "$ref": "sources-img.schema.json"
              },
              "Text": {
                "type": "array",
                "items": {
                  "type": "string",
                  "title": "Language",
                  "format": "textarea",
                  "options": {
                    "input_height":"100px"
                  }
                }
              },
              "Position": {
                "type": "string",
                "enum": [
                  "Top",
                  "Center",
                  "Bottom"
                ],
                "default": "Center"
              },
              "Size": {
                "anyOf": [
                  {
                    "type": "integer",
                    "title": "Defaults",
                    "enum": [
                      10,
                      15,
                      20,
                      25,
                      30,
                      35,
                      40,
                      45,
                      50,
                      55,
                      60,
                      65,
                      70,
                      75,
                      80,
                      85
                    ],
                    "default": 55
                  },
                  {
                    "type": "integer",
                    "title": "Custom",
                    "default": 55
                  }
                ]
              },
              "Time": {
                "type": "number",
                "format": "number",
                "step": 1,
                "default": 1,
                "description": "Duration of the sequence in seconds"
              },
              "Music": {
                "$ref": "watch-music.schema.json"
              },
              "Voice": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "Image",
              "Text",
              "Time"
            ]
          }
        }
      },
      "required": [
        "Name","Sequence"
      ]
}
